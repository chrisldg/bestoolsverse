rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règle simple pour commencer
    // Lecture publique, écriture pour les utilisateurs authentifiés
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
  }
}